{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": ""
    },
    "provisioners": [
        {
            "type": "shell",
            "script": "scripts/ansible.sh"
        },
        {
        "type": "ansible-local",
        "playbook_file": "ansible/main.yml",
        "galaxy_file": "requirements.yml"
        }
    ],
    "builders":[{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "us-east-1",
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "tony-ubuntu/images/ubuntu-17.10.1-server-amd64.iso",
                "root-device-type": "ebs"
            },
            "owners": ["099720109477"],
            "most_recent": true
        },
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "packer-example-{{timestamp}}"
    }]
}